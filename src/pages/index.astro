---
import Background from 'src/components/sections/Background.astro'
import Hero from 'src/components/sections/Hero.astro'
import Post from 'src/components/sections/Post.astro'
import Projects from 'src/components/sections/Projects.astro'
import Timeline from 'src/components/sections/Timeline.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout>
	<Background />
	<Hero />
	<section
		class='grid max-w-xl grid-cols-1 mx-auto gap-y-20 lg:max-w-none lg:grid-cols-2 md:gap-x-16 xl:gap-x-32'
	>
		<article class='flex flex-col gap-16 order-2 md:-order-1'>
			<Projects />
		</article>
		<article class='space-y-10'>
			<Timeline />
		</article>
	</section>
</Layout>
