---
import CloudinaryImage from './CloudinaryImage.astro'
import TechnologyIcon from './TechnologyIcon.astro'
interface Props {
	id: string
	href: string
	img: string
	title: string
	description: string
	technologies: {
		id: string
		src: string
		name: string
	}[]
}
const { id, href, img, title, description, technologies } = Astro.props
---

<a
	href={href}
	class='flex group flex-col gap-2 items-center bg-white border rounded-lg transition-all relative hover:shadow-md hover:backdrop-blur-sm hover:scale-[1.01] md:hover:border-gray-200 md:border-transparent md:flex-row md:max-w-2xl md:max-h-72 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700'
>
	<CloudinaryImage
		className='object-cover w-full border-transparent rounded-t-lg aspect-video md:border md:rounded-md md:max-w-[250px] md:ml-4'
		src={img}
		alt={'project image for ' + title}
		transformation={'ar_16:9,c_thumb,w_683,h_384'}
	/>
	<div class='flex flex-col justify-between p-4 leading-normal gap-3'>
		<h1 class='text-2xl font-bold tracking-tight text-gray-900 dark:text-white'>
			{title}
		</h1>
		<p class='font-normal text-gray-700 dark:text-gray-400'>
			{description}
		</p>
		<div class='flex gap-5'>
			{
				technologies &&
					technologies.map((tech) => (
						<TechnologyIcon
							id={`${id}-${tech.id}`}
							src={tech.src}
							name={tech.name}
						/>
					))
			}
		</div>
	</div>
</a>
