---
import CloudinaryImage from '../CloudinaryImage.astro'
import ChevronDown from '../icons/ChevronDown.astro'
import GithubIcon from '../icons/GithubIcon.astro'
import LinkedinIcon from '../icons/LinkedinIcon.astro'
import MailIcon from '../icons/MailIcon.astro'
import Background from './Background.astro'
---

<section
	id='hero'
	class='flex-1 min-h-auto flex flex-col xl:min-h-screen relative'
>
	<Background />
	<div
		class='flex-1 flex flex-col xl:flex-row justify-evenly items-center xl:justify-center relative'
	>
		<div
			class='flex flex-col gap-4 max-w-6xl bg-white border border-gray-200 rounded-xl dark:bg-gray-800/95 dark:border-gray-700 p-8 bg-opacity-90 drop-shadow-2xl'
		>
			<h1
				class='text-gray-900 text-5xl sm:text-6xl md:text-8xl font-light text-transparent bg-clip-text bg-gradient-to-r from-primary-700 via-secondary-700 to-secondary-100'
			>
				<span class='font-bold'>Alex</span> Marcos
			</h1>
			<h2
				class='text-gray-900 text-xl sm:text-2xl md:text-4xl font-bold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-primary-700 via-secondary-700 to-secondary-100'
			>
				Web developer
			</h2>
			<h3
				class='text-gray-700 text-lg sm:text-xl md:text-2xl font-light mb-4 dark:text-gray-300'
			>
				Passionate about the amazing and crazy world of technology, I enjoy
				writing code every day to create amazing digital products
			</h3>
			<h3
				class='text-gray-700 text-md sm:text-lg md:text-lg font-light dark:text-gray-300'
			>
				I currently work at Roche Diagnostics and as a Freelancer
			</h3>
			<section class='flex gap-8 text-xl mt-8 items-center'>
				<a
					aria-label='email'
					href='mailto:alexsbd1@gmail.com'
					rel='noopener noreferrer'
					target='_blank'
					class='dark:text-gray-300 dark:hover:text-gray-100'
				>
					<MailIcon />
				</a>
				<a
					aria-label='github'
					href='https://github.com/kappys1'
					target='_blank'
					rel='noreferrer'
				>
					<GithubIcon className='dark:text-gray-300 dark:hover:text-gray-100' />
				</a>
				<a
					aria-label='linkedin'
					href='https://www.linkedin.com/in/alexmarcosgutierrez/'
					target='_blank'
					rel='noreferrer'
					class='text-blue-500 hover:text-blue-600 dark:text-gray-300 dark:hover:text-gray-100'
				>
					<LinkedinIcon />
				</a>
			</section>
		</div>
		<CloudinaryImage
			src='v1681068093/portfolio/me.png'
			alt='Mi imagen de perfil'
			className='max-w-[350px] self-center h-3/4 border-1 rounded-lg object-contain justify-center -bottom-32 right-0 sm:max-w-[480px] md:mt-16 lg:w-[550px] md:absolute xl:bottom-0'
		/>
	</div>
	<ChevronDown
		id='chevron-down'
		className='self-center mt-4 hover:scale-110 cursor-pointer transition-transform duration-300 ease-in-out md:pb-16'
	/>
</section>

<script>
	const handleGoToTimeline = () => {
		const timeline = document.querySelector('#timeline')
		timeline && timeline.scrollIntoView({ behavior: 'smooth' })
	}
	const button = document.querySelector('#chevron-down')
	button && button.addEventListener('click', handleGoToTimeline)
</script>
