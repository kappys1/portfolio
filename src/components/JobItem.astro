---
const { image, company, job, date } = Astro.props
---

<li class='py-3 sm:py-4'>
	<div class='flex items-center space-x-4'>
		<div
			class='relative flex items-center justify-center flex-none w-10 h-10 mt-1 rounded-full shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0'
		>
			<img
				class='w-8 h-8 object-contain rounded-full'
				src={image}
				alt={`${company} logo`}
			/>
		</div>
		<div class='flex-1 min-w-0'>
			<dt class='sr-only'>Company</dt>
			<p
				class='text-sm font-medium text-gray-900 truncate dark:text-white pb-1'
			>
				{company}
			</p>
			<dt class='sr-only'>Role</dt>
			<dd class='text-sm text-gray-500 truncate dark:text-gray-400'>
				{job}
			</dd>
		</div>
		<div
			class='inline-flex items-center text-base font-semibold text-gray-900 dark:text-white'
		>
			<>
				<dt class='sr-only'>Time</dt>
				<dd
					class='ml-auto text-xs text-zinc-600 dark:text-zinc-300'
					aria-label='2021 until Presente'
				>
					<time datetime='2021'>{date.from}</time>
					<span aria-hidden='true'>â€”</span>
					<time datetime='2023'>{date.to}</time>
				</dd>
			</>
		</div>
	</div>
</li>
